contract BTTToken is ERC20, Ownable {
    using SafeMath for uint256;
    using Percentage for uint256;

    uint256 public constant TOTAL_SUPPLY = 210000000 * 10 ** 18; // 2.1亿 BTT，18位小数

    // 分配比例
    uint256 public constant technology = 50000;       // 技术
    uint256 public constant operations = 50000; // 运营
    uint256 public constant airdrop = 10000;       // 空投
    uint256 public constant nft = 105000;       // nft
    uint256 public constant market = 100000;       // 市值
    uint256 public constant ecology = 685000;       // 生态

    address public constant technologyAddr = address(0x7f66b96fA8F65bDBE89cBd844e9F862eD0d70047);       // 技术
    address public constant operationsAddr = address(0x582054c71b429A51F7Ebdb79c1e0C3f12b1Bb8e0); // 运营
    address public constant airdropAddr = address(0x81928dC51470D76B2126D6C8062dE0b5B1d2f45d);       // 空投
    address public constant nftAddr = address(0xEA8632733AFB5f55a5171ed189685494C3E30648);       // nft
    address public constant marketAddr = address(0xA900b1d4FF06CB328Ca124915a31d3AfFf4D9369);       // 市值
    address public constant ecologyAddr = address(0x279df16a557C53BA5733111C2AFA6Bf7eb8e70e9);       // 生态

    struct VestingSchedule {
        uint256 totalAmount;        // 总分配数量
        uint256 startTime;          // 解锁开始时间
        uint256 endTime;            // 解锁结束时间
        uint256 claimedAmount;      // 已提取数量
    }

    mapping(address => VestingSchedule) public vestingSchedules;

    event TokensClaimed(address indexed beneficiary, uint256 amount);

    constructor() ERC20("BTT Token", "BTT") Ownable(msg.sender){

        // 初始化锁仓计划
        _initializeVesting(technologyAddr, TOTAL_SUPPLY.percentage(technology));         // 技术锁仓
        _initializeVesting(operationsAddr, TOTAL_SUPPLY.percentage(operations));  // 运营锁仓

        // 其他分配
        _mint(airdropAddr, TOTAL_SUPPLY.percentage(airdrop));
        _mint(nftAddr, TOTAL_SUPPLY.percentage(nft));
        _mint(marketAddr, TOTAL_SUPPLY.percentage(market));
        _mint(ecologyAddr, TOTAL_SUPPLY.percentage(ecology));
    }

    function _initializeVesting(address beneficiary, uint256 amount) internal {
        require(beneficiary != address(0), "Beneficiary cannot be zero address");
        require(amount > 0, "Amount must be greater than zero");

        uint256 startTime = block.timestamp + 365 days; // 1年锁仓
        uint256 endTime = startTime + 1095 days;        // 3年线性释放

        vestingSchedules[beneficiary] = VestingSchedule({
            totalAmount: amount,
            startTime: startTime,
            endTime: endTime,
            claimedAmount: 0
        });

        _mint(address(this), amount); // 将锁仓的代币发送到合约中
    }

    function claimTokens() external {
        VestingSchedule storage schedule = vestingSchedules[msg.sender];
        require(schedule.totalAmount > 0, "No vesting schedule found for this address");
        require(block.timestamp > schedule.startTime, "Vesting period has not started");

        uint256 vestedAmount = _calculateVestedAmount(schedule);
        uint256 claimableAmount = vestedAmount.sub(schedule.claimedAmount);
        require(claimableAmount > 0, "No tokens available for claiming");

        schedule.claimedAmount = schedule.claimedAmount.add(claimableAmount);
        _transfer(address(this), msg.sender, claimableAmount);

        emit TokensClaimed(msg.sender, claimableAmount);
    }

    function _calculateVestedAmount(VestingSchedule memory schedule) internal view returns (uint256) {
        if (block.timestamp >= schedule.endTime) {
            return schedule.totalAmount;
        }

        uint256 duration = schedule.endTime.sub(schedule.startTime);
        uint256 timeElapsed = block.timestamp.sub(schedule.startTime);
        return schedule.totalAmount.mul(timeElapsed).div(duration);
    }
}

